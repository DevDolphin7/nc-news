{
  "GET /api": {
    "description": "serves up a json representation of all the available endpoints of the api",
    "exampleResponse": { "endpoints": "<this JSON parsed to an object>" }
  },
  "GET /api/users": {
    "description": "Get all users",
    "exampleResponse": [
      {
        "username": "weegembump",
        "name": "Killoah",
        "avatar_url": "www.example.com/avatar_image_url"
      }
    ]
  },
  "GET /api/topics": {
    "description": "serves an array of all topics",
    "queries": [],
    "exampleResponse": {
      "topics": [{ "slug": "football", "description": "Footie!" }]
    }
  },
  "GET /api/articles": {
    "description": "serves an array of all articles",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "articles": [
        {
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "comment_count": 6
        }
      ]
    }
  },
  "GET /api/articles/:article_id": {
    "description": "serves an article by it's ID",
    "queries": ["author", "topic", "sort_by", "order"],
    "exampleResponse": {
      "article": [
        {
          "article_id": "3",
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 0,
          "article_img_url": "www.example.com/article_image_url"
        }
      ]
    }
  },
  "PATCH /api/articles/:article_id": {
    "description": "Update an article vote count by article_id",
    "format": { "inc_votes": 1 },
    "exampleResponse": {
      "updatedArticle": [
        {
          "article_id": "3",
          "title": "Seafood substitutions are increasing",
          "topic": "cooking",
          "author": "weegembump",
          "body": "Text from the article..",
          "created_at": "2018-05-30T15:59:13.341Z",
          "votes": 1,
          "article_img_url": "www.example.com/article_image_url"
        }
      ]
    }
  },
  "GET /api/articles/:article_id/comments": {
    "description": "Get all comments for an article",
    "exampleResponse": {
      "comments": [
        {
          "comment_id": 6,
          "body": "The owls are not what they seem.",
          "votes": 20,
          "author": "icellusedkars",
          "article_id": 9,
          "created_at": 1584205320000
        }
      ]
    }
  },
  "POST /api/articles/:article_id/comments": {
    "description": "Add a comment to an article",
    "exampleResponse": {
      "comment": [
        {
          "comment_id": 6,
          "body": "The owls are not what they seem.",
          "votes": 20,
          "author": "icellusedkars",
          "article_id": 9,
          "created_at": 1584205320000
        }
      ]
    }
  },
  "DELETE /api/comments/:comment_id": {
    "description": "Delete the given comment by comment_id"
  }
}
